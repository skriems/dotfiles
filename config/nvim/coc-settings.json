{
  "coc.preferences.formatOnSaveFiletypes": ["css", "html", "json", "python", "rust", "javascript", "typescript"],
  "codeLens.enable": false,
  // Javascript & TypeScript
  "eslint.autoFixOnSave": true,
  "javascript.suggestionActions.enabled": true,
  "javascript.autoClosingTags": true,
  "typescript.suggestionActions.enabled": true,
  "typescript.autoClosingTags": true,
  "tsserver.enableJavascript": true,
  "tsserver.npm": "~/.nvm/versions/node/v14.16.1/bin/npm",
  "prettier.singleQuote": true,
  "prettier.printWidth": 120,
  // CSS stylelintplus needs coc-css to disable validation
  "stylelintplus.autoFixOnSave": true,
  "stylelintplus.cssInJs": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": true,
  "wxss.validate": false,
  // Java
  "java.format.enabled": true,
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.completion.guessMethodArguments": true,
  "java.implementationsCodeLens.enabled": true,
  "java.import.maven.enabled": true,
  "java.import.gradle.enabled": true,
  "java.import.gradle.wrapper.enabled": true,
  "java.imports.gradle.wrapper.checksums": [
    {
      "sha256": "33ad4583fd7ee156f533778736fa1b4940bd83b433934d1cc4e9f608e99a6a89",
      "allowed": true
    }
  ],
  "java.jdt.ls.vmargs": "-javaagent:/home/skriems/repos/dotfiles/java/lombok.jar",
  "java.maven.downloadSources": true,
  "java.referencesCodeLens.enabled": true,
  "java.signatureHelp.enabled": true,
  "java.trace.server": "verbose",
  // Python
  "python.venvPath": "~/.virtualenvs",
  "python.jediEnabled": true,
  "python.jediPath": "~/.virtualenvs/nvim3/lib/python3.8/site-packages",
  //rust
  "rust-analyzer.trace.server": "verbose",
  // Diagnostics
  "diagnostic-languageserver.debug": true,
  "diagnostic-languageserver.trace.server": "verbose",
  // filetypes for linters
  "diagnostic-languageserver.filetypes": {
    "css": "stylelint",
    "java": ["pmd", "checkstyle"],
    "javascript": "eslint",
    "javascriptreact": "eslint",
    "markdown": ["write-good", "markdown-lint"],
    "sh": "shellcheck",
    "typescript": "eslint",
    "typescriptreact": "eslint",
    "vim": "vint"
  },
  // filetypes for formatters
  "diagnostic-languageserver.linters": {
    "pmd": {
      "sourceName": "pmd",
      "command": "runpmd",
      "args": ["%filepath"],
      "debounce": 100,
      "isStdout": true,
      "parseJson": {
        "errorsRoot": "files[0].violations",
        "line": "beginline",
        "endLine": "endline",
        "column": "begincolumn",
        "endColumn": "endcolumn",
        "message": "${$t} [${rule}]",
        "security": "priority"
      },
      "securities": {
        "1": "error",
        "2": "warning",
        "3": "info",
        "4": "hint"
      }
    },
    "checkstyle": {
      "command": "checkstyle",
      "args": ["-c", ".checkstyle.xml", "%filepath"],
      "rootPatterns": [".git"],
      "debounce": 100,
      "sourceName": "checkstyle",
      "formatLines": 1,
      "formatPattern": [
        "^.*(WARN|ERROR).*\\.java:(\\d+)(.*)$",
        {
          "line": 2,
          "message": 3,
          "security": 1
        }
      ],
      "securities": {
        "ERROR": "error",
        "WARN": "warning"
      },
      "requiredFiles": [".checkstyle.xml"]
    }
  }
}
