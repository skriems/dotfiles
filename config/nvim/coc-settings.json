{
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "python",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "codeLens.enable": true,
  "diagnostic-languageserver.linters": {
      "checkstyle": {
          "command": "checkstyle",
          "args": ["-c", ".checkstyle.xml", "%filepath"],
          "rootPatterns": [
              ".git"
          ],
          "debounce": 100,
          "sourceName": "checkstyle",
          "formatLines": 1,
          "formatPattern": [
            "^.*(WARN|ERROR).*\\.java:(\\d+)(.*)$",
            {
              "line": 2,
              "message": 3,
              "security": 1
            }
          ],
          "securities": {
            "ERROR": "error",
            "WARN": "warning"
          },
          "requiredFiles": [".checkstyle.xml"]
      }
  },
  "diagnostic-languageserver.filetypes": {
      "css": "stylelint",
      "java": ["checkstyle", "pmd"],
      "javascript": "eslint",
      "markdown": ["write-good", "markdown-lint"],
      "php": ["php-cs-fixer", "phpcs", "phpstan"],
      "rust": "cargo-clippy",
      "sh": "shellcheck",
      "typescript": "eslint",
      "vim": "vint"
  },
  "diagnostic-languageserver.formatFiletypes": {
      "php": "php-cs-fixer"
  },
  "diagnostic-languageserver.trace.server": "verbose",
  "eslint.autoFixOnSave": true,
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.implementationsCodeLens.enabled": true,
  "java.jdt.ls.vmargs": "-javaagent:/Users/skriems/repos/dotfiles/lombok.jar",
  "java.maven.downloadSources": true,
  "java.referencesCodeLens.enabled": true,
  "javascript.suggestionActions.enabled": false,
  "javascript.validate.enable": false,
  "languageserver": {
    "flow": {
      "command": "flow",
      "args": ["lsp"],
      "filetypes": ["javascript", "javascriptreact"],
      "initializationOptions": {},
      "requireRootPattern": true,
      "settings": {},
      "rootPatterns": [".flowconfig"]
    },
    "dart": {
      "command": "dart_language_server",
      "args": [],
      "trace.server": "verbose",
      "filetypes": ["dart"],
      "initializationOptions": {},
      "settings": {
        "dart": {
          "validation": {},
          "completion": {}
        }
      }
    },
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  },
  "python.venvPath": "~/.virtualenvs",
  "tsserver.enableJavascript": true,
  "typescript.suggestionActions.enabled": true,
  "typescript.validate.enable": true,
}
