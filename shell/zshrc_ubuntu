# nvm
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# fzf
export FZF_BASE="/usr/share/fzf"
[ -s "$FZF_BASE/key-bindings.zsh" ] && source $FZF_BASE/key-bindings.zsh

# zsh-syntax-highlighting
[ -f /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ] && . /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# vifm
export MYVIFMRC=~/.config/vifm/vifmrc_unix

# pmd
export PMD_DIR="/opt/pmd"
