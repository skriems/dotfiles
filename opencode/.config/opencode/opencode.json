{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "tools": {
    "grep": false,
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
    },
    "github": {
      "enabled": true,
      "type": "remote",
      "headers": {
        "Authorization": "Bearer ${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "url": "https://api.githubcopilot.com/mcp/"
    }
  },
}
